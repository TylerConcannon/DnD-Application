<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/randomEncounter"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="75dp"
        android:text="Random Encounter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/randomNPC"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="32dp"
        android:text="Random NPC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/randomTown"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="32dp"
        android:text="Random Town"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/randomAdventure"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="32dp"
        android:text="Random Adventure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>